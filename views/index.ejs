<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles.css">
    <title><%= title %></title>
  </head>
  <body>
    <h1>Members Only Club</h1>
    <div class="all-posts">
      <% posts.forEach(post => { %>
      <div class="post">
        <h2><%= post.title %></h2>
        <p><%= post.message %></p>
        <% if (user) { %>
          <p><%= post.added_on %></p>
          <p><%= post.username %></p>
          <% if (user.admin) { %>
            <form action="/<%= post.id %>/delete-post" method="post">
                <button type="submit">Delete Post</button>
            </form>
          <% } %>
        <% } %>
      </div>
      <% }) %>
    </div>

    <% if (user) { %>
      <a href="/<%= user.id %>/new-post">New Post</a>
      <a href="/logout">Logout</a>
    <% } else { %>
      <a href="/sign-up">Sign-Up</a>
      <a href="/login">Login</a>
    <% } %>
  </body>
</html>
